<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/client_details_card"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"

        android:layout_marginBottom="10dp"
        android:paddingTop="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#E5E5E5"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageView
                android:id="@+id/client_image"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="6dp"
                android:contentDescription="@string/client_image"
                android:scaleType="centerCrop"
                android:src="@drawable/client_image" />

            <TextView
                android:id="@+id/client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/client_image"
                android:layout_toRightOf="@id/client_image"
                android:text="Devendra Kumar Jha"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/pan_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/client_name"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"

                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/client_image"
                android:layout_toRightOf="@id/client_image"
                android:text="@string/pan"
                android:textColor="#353535"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/client_pan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/pan_heading"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_toEndOf="@id/client_image"
                android:layout_toRightOf="@id/client_image"
                android:text="BR*****7H"
                android:textColor="#353535"
                android:textSize="14sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/next_screen_btn"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
